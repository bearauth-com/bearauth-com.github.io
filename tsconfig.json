{
  "compilerOptions": {
    "rootDir": ".",
    "module": "Node16",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "lib",
    "dist",
    "out",
    "coverage"
  ]
}